{
  "name": "blogseq",
  "description": "BlogSeq is a Logseq plugin that exports pages to clean Markdown format with support for assets, frontmatter, and various export options.",
  "author": "Brian Sunter",
  "version": "1.1.0",
  "main": "dist/index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briansunter/blogseq.git"
  },
  "bugs": {
    "url": "https://github.com/briansunter/blogseq/issues"
  },
  "homepage": "https://github.com/briansunter/blogseq#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\" \"*.{json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/tests/unit",
    "test:component": "vitest run src/tests/component",
    "test:integration": "vitest run src/tests/integration",
    "test:e2e": "vitest run src/tests/e2e",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "check:all": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm test",
    "fix-all": "pnpm lint:fix && pnpm format && pnpm test",
    "prepare": "husky",
    "storybook": "STORYBOOK=true storybook dev -p 6006",
    "build-storybook": "STORYBOOK=true storybook build",
    "preinstall": "npx only-allow pnpm"
  },
  "license": "MIT",
  "dependencies": {
    "@logseq/libs": "^0.0.17",
    "@types/file-saver": "^2.0.7",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "remark-frontmatter": "^5.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "10.0.6",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "18.19.122",
    "@types/react": "18.3.23",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vitejs/plugin-react": "3.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "10.4.21",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "eslint": "8.57.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "4.6.2",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "postcss": "8.5.6",
    "semantic-release": "21.1.2",
    "storybook": "^8.6.14",
    "tailwindcss": "3.4.17",
    "typescript": "4.9.5",
    "vite": "4.5.14",
    "vite-plugin-logseq": "1.1.2",
    "vitest": "^3.2.4"
  },
  "logseq": {
    "id": "_briansunter-blogseq",
    "icon": "./logo.svg"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
